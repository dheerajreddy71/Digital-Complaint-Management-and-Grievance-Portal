# Environment
NODE_ENV=development
PORT=3000

# Database - MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=complaint_portal

# JWT Configuration
JWT_SECRET=change-this-to-a-strong-random-secret-in-production
JWT_REFRESH_SECRET=change-this-to-another-strong-random-secret
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=uploads

# Rate Limiting
LOGIN_RATE_LIMIT_WINDOW=15
LOGIN_RATE_LIMIT_MAX=5
COMPLAINT_RATE_LIMIT_WINDOW=60
COMPLAINT_RATE_LIMIT_MAX=10

# Email (optional - for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@portal.com
